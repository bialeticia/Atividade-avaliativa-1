algoritmo exercicio1;
// Síntese
//  Objetivo: ler um numero inteiro de horas e mostrar ao usuario o correspondente em minutos e segundos
//  Entrada : horas
//  Saída   : minutos e segundos


principal
	// Declarações
	inteiro horas, minutos, segundos;

	// Instruções
	escreva ("informe as horas: ");
	leia (horas);

	minutos = horas * 60;
	segundos = horas * 3600;

	escreva ("minutos: " + minutos);
	escreva (" segundos: " + segundos);

fimPrincipal
